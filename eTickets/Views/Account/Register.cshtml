@using eTickets.Data.ViewModels; 
@model RegisterVM;

@{
    ViewData["Title"] = "Sign up for a new account";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4 class="page-title">Sign up for a new account</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control input-field" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control input-field" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control input-field" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control input-field" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-submit float-right" type="submit" value="Sign up" />
                        <a class="btn btn-cancel" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: black;
        color: white;
    }

    .page-title {
        color: orange;
    }

    .form-control.input-field {
        background-color: white;
        color: black;
        border: 1px solid #ddd;
    }

        .form-control.input-field:focus {
            border-color: orange;
            box-shadow: none;
        }

    .btn-submit {
        background-color: orange;
        color: white;
        border: none;
    }

        .btn-submit:hover {
            background-color: orange;
            color: white;
        }

    .btn-cancel {
        background-color: transparent;
        color: orange;
        border: 1px solid orange;
    }

        .btn-cancel:hover {
            background-color: transparent;
            color: orange;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }
</style>
