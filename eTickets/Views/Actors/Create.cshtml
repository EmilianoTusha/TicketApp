@model Actor
@{
    ViewData["Title"] = "Create actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1 class="page-title">Add a New Actor</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control input-field" />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control input-field" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control input-field" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-submit float-right" />
                        <a class="btn btn-show-all" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: black;
        color: white;
    }

    .page-title {
        color: orange;
    }

    .form-control.input-field {
        background-color: white;
        color: black;
        border: 1px solid #ddd;
    }

        .form-control.input-field:focus {
            border-color: orange;
        }

    .btn {
        background-color: orange;
        color: white;
        border: none;
    }

        .btn:hover {
            background-color: orange;
            color: white;
        }

    .btn-show-all {
        background-color: orange;
        color: white;
        border: none;
    }

        .btn-show-all:hover {
            background-color: orange;
            color: white;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
