@model Actor

@{
    ViewData["Title"] = "Details of the actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1 class="text-center">Details for @Model.FullName</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-custom float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-custom" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        });
    </script>
}

<style>
    body {
        background-color: black; /* Sfonda e zezë për faqen */
        color: white; /* Teksti bardhë si parazgjedhje */
    }

    .form-control {
        background-color: white; /* Sfonda bardhë për fushat e input-it */
        color: black; /* Teksti zi për fushat e input-it */
        border: 1px solid #ccc; /* Kufiri i lehtë gri */
    }

        .form-control:focus {
            background-color: white; /* Sfonda bardhë gjatë fokusit */
            color: black; /* Teksti zi gjatë fokusit */
            border-color: orange; /* Kufiri portokalli gjatë fokusit */
            box-shadow: none; /* Pa hije gjatë fokusit */
        }

    .btn-custom {
        background-color: orange; /* Butonat portokalli */
        color: white; /* Teksti bardhë për butonat */
        border: 1px solid orange; /* Kufiri portokalli për butonat */
    }

        .btn-custom:hover {
            background-color: orange; /* Butonat portokalli gjatë hover */
            color: white; /* Teksti bardhë gjatë hover */
            border: 1px solid orange; /* Kufiri portokalli gjatë hover */
        }

    .text-center {
        margin-bottom: 20px; /* Distancë poshtë titullit */
        color: orange; /* Ngjyra e bardhë për titullin */
    }

    .form-group label {
        color: white; /* Teksti bardhë për etiketat */
    }

    .text-danger {
        color: red; /* Teksti për gabimet mbetet kuq */
    }
</style>
