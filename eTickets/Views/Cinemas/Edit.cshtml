@model Cinema

@{
    ViewData["Title"] = "Update cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="CinemaLogoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val();
        });

        $("#Logo").on("change", function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $(this).val();
        });
    </script>
}

<style>
    body {
        background-color: black; /* Sfonda e zezë */
        color: white; /* Teksti bardhë */
    }

    .form-control {
        background-color: #333; /* Fusha e hyrjes gri e errët */
        color: white; /* Teksti bardhë në fushat e hyrjes */
        border: 1px solid #555; /* Kufiri gri i errët */
    }

    .btn {
        color: white; /* Teksti bardhë për butonat */
        background-color: orange; /* Sfonda portokalli për butonat */
        border: 1px solid orange; /* Kufiri portokalli për butonat */
    }

        .btn:hover {
            background-color: #ff8800; /* Ngjyrë portokalli e ndezur për hover */
            border: 1px solid #ff8800; /* Kufiri i ndezur për hover */
        }

    h1 {
        color: orange; /* Titulli me ngjyrë portokalli */
    }

    label {
        color: white; /* Etiketa të bardha */
    }

    .text-danger {
        color: red; /* Ngjyra e gabimeve të kuqe për dallueshmëri */
    }

    .btn-outline-secondary {
        background-color: orange; /* Sfonda portokalli për butonin Show All */
        border-color: orange; /* Kufiri portokalli për butonin Show All */
        color: white; /* Teksti i bardhë për butonin Show All */
    }

        .btn-outline-secondary:hover {
            background-color: orange; /* Sfonda portokalli gjatë hover */
            border-color: orange; /* Kufiri portokalli gjatë hover */
            color: white; /* Teksti i bardhë gjatë hover */
        }
</style>
