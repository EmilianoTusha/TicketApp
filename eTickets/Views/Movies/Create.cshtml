@model NewMovieVM
@using eTickets.Data;
 
@{
    ViewData["Title"] = "Create a new movie";
}

<style>
    body {
        background-color: #000; /* Sfondi i zi për të gjithë faqen */
        color: #f39c12; /* Teksti portokalli si ngjyra primare */
    }

    .form-control {
        background-color: #fff; /* Ngjyra e bardhë për fushat e input-it */
        color: #000; /* Teksti i zi për fushat e input-it */
        border: 1px solid #e67e22; /* Border portokalli */
    }

        .form-control:focus {
            background-color: #f7f7f7; /* Ngjyra e bardhë e zbehtë kur input-et janë të selektuara */
            color: #000; /* Teksti i zi kur janë të selektuara */
            border-color: #e67e22; /* Border portokalli */
        }

    label {
        color: #f39c12; /* Ngjyra portokalli për etiketat */
    }

    .btn-outline-success {
        color: #e67e22; /* Ngjyra portokalli për butonat */
        border-color: #e67e22; /* Border portokalli për butonat */
    }

    .btn-outline-success {
        background-color: #e67e22; /* Ngjyra portokalli kur butonat janë të selektuar */
        color: #fff; /* Tekst i bardhë në butona kur janë të selektuar */
    }

    .btn-outline-secondary {
        color: #f39c12; /* Ngjyra portokalli për butonat e secondary */
        border-color: #f39c12; /* Border portokalli për butonat e secondary */
    }

        .btn-outline-secondary: {
            background-color: #f39c12; /* Ngjyra portokalli kur butonat e secondary janë të selektuar */
            color: #fff; /* Tekst i bardhë në butona kur janë të selektuar */
        }

    .text-danger {
        color: #e74c3c !important; /* E kuqe për tekstet e gabimeve */
    }
</style>

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new movie</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CinemaId" class="control-label"></label>
                                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas"></select>
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MovieCategory" class="control-label"></label>
                                <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProducerId" class="control-label"></label>
                                <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers"></select>
                                <span asp-validation-for="ProducerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ActorIds" class="control-label"></label>
                                <select asp-for="ActorIds" class="form-control" asp-items="ViewBag.Actors" multiple="multiple"></select>
                                <span asp-validation-for="ActorIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}